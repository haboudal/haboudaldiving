# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.production and fill in the values
# For Railway: Set these as environment variables in the dashboard
# =============================================================================

# Server
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Frontend URL (for email links, CORS)
FRONTEND_URL=https://your-app.vercel.app

# Database (Railway provides DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:5432/database
# OR set individually:
# DB_HOST=your-db-host
# DB_PORT=5432
# DB_NAME=diving_platform
# DB_USER=your-user
# DB_PASSWORD=your-password
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis (Railway provides REDIS_URL automatically)
REDIS_URL=redis://default:password@host:6379

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=GENERATE_MIN_32_CHAR_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_32_CHAR_SECRET_HERE
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=GENERATE_32_BYTE_HEX_KEY_HERE
ENCRYPTION_IV_LENGTH=16

# SRSA Integration
SRSA_API_URL=https://api.srsa.gov.sa
SRSA_API_KEY=your_srsa_api_key
SRSA_API_SECRET=your_srsa_api_secret
USE_MOCK_SRSA=false

# Email (SendGrid recommended for production)
EMAIL_MOCK_MODE=false
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com

# SMS (Twilio)
SMS_MOCK_MODE=false
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+966500000000

# Push Notifications (Firebase)
FIREBASE_MOCK_MODE=false
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase-service-account.json

# Logging (use 'info' or 'warn' in production)
LOG_LEVEL=info
LOG_FORMAT=json

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://your-app.vercel.app,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# HyperPay Payment Gateway
HYPERPAY_ACCESS_TOKEN=your_hyperpay_production_token
HYPERPAY_ENTITY_ID_MADA=your_mada_entity_id
HYPERPAY_ENTITY_ID_VISA=your_visa_entity_id
HYPERPAY_ENTITY_ID_MASTER=your_mastercard_entity_id
HYPERPAY_ENTITY_ID_APPLEPAY=your_applepay_entity_id
HYPERPAY_ENTITY_ID_STC_PAY=your_stcpay_entity_id
HYPERPAY_WEBHOOK_SECRET=your_webhook_secret
HYPERPAY_TEST_MODE=false
